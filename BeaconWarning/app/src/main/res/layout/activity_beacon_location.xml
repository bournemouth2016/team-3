<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_beacon_location"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kevin.beaconwarning.BeaconLocation"
    tools:ignore="HardcodedText"
    >
    <Button
        android:id="@+id/wall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vibrate"
        />

    <Button
        android:id="@+id/doorway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vibrateThree"
        android:layout_below="@+id/wall"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <Button
        android:id="@+id/stairs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vibrateTwo"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/doorway"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/emergencyExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vibrateFour"
        android:layout_below="@+id/stairs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp" />


</RelativeLayout>
